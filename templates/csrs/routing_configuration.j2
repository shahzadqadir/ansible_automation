# ~/automation/ansible_automation/templates/csrs/routing_configuration.j2

end

{% if bgp %}
    router bgp {{ bgp.local_as }}
        {% for neighbor in bgp.neighbors %}
        neighbor {{ neighbor.ip }} remote-as {{ neighbor.remote_as }}
        neighbor {{ neighbor.ip }} route-map {{ neighbor.route_map_in }} in
        neighbor {{ neighbor.ip }} route-map {{ neighbor.route_map_out }} out
        {% endfor %}
        !
        {% for network in bgp.networks %}
        network {{ network.subnet }} mask {{ network.mask }}
        {% endfor %}
{% endif %}

